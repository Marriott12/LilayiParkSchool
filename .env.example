# ============================================
# Lilayi Park School - Environment Configuration
# ============================================
# Copy this file to .env and configure with your settings
# IMPORTANT: Never commit .env to version control!

# ============================================
# Application Environment
# ============================================
# Options: development, production
# development = Shows errors, debug info
# production = Hides errors, logs to file
APP_ENV=development

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_NAME=lilayiparkschool
DB_USER=root
DB_PASSWORD=

# ============================================
# Email/SMTP Configuration (Optional)
# ============================================
# Leave blank to configure via Settings page
# or set here for immediate use
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=Lilayi Park School
SMTP_ENCRYPTION=tls

# Send account credentials via email? (1=yes, 0=no)
SEND_ACCOUNT_EMAILS=0

# ============================================
# Security Settings
# ============================================
# Session timeout in seconds (default: 1800 = 30 minutes)
SESSION_TIMEOUT=1800

# Force HTTPS for cookies? (1=yes, 0=auto-detect)
# Auto-detect is recommended for most setups
FORCE_SECURE_COOKIES=0

# ============================================
# File Upload Settings
# ============================================
# Max file size in bytes (default: 5242880 = 5MB)
MAX_UPLOAD_SIZE=5242880

# ============================================
# API Configuration
# ============================================
# API token expiration in seconds (default: 2592000 = 30 days)
API_TOKEN_EXPIRY=2592000
